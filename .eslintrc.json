{
  "env": {
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": "eslint:recommended",
  "globals": {
    "Atomics": "readonly",
    "SharedArrayBuffer": "readonly"
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "prefer-const": "error"
  },
  "overrides": [
    {
      "files": ["test/**/*.js"],
      "env": {
        "jest": true
      }
    }
  ]
}
